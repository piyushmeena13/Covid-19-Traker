<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#F6F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/headingTV"
        android:padding="5dp">

        <TextView
            android:id="@+id/state_TV"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="STATE/UT"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/total_casesTV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#C18F00"
                android:gravity="center"/>

            <TextView
                android:id="@+id/active_casesTV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#0067B8"
                android:gravity="center"/>

            <TextView
                android:id="@+id/recoveredTV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#00C10C"
                android:gravity="center"/>

            <TextView
                android:id="@+id/total_deathTV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#C50000"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Confirmed"
                android:textStyle="bold"
                android:textColor="#C18F00"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Active "
                android:textStyle="bold"
                android:textColor="#0067B8"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Recovered"
                android:textStyle="bold"
                android:textColor="#00C10C"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Deaths"
                android:textStyle="bold"
                android:textColor="#C50000"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>